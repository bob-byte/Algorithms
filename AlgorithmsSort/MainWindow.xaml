<Window x:Class="AlgorithmsSort.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AlgorithmsSort"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Menu HorizontalAlignment="Left" Height="18" VerticalAlignment="Top" Width="794" Margin="0,0,-0.4,0">
            <MenuItem Header="Algorithms">
                <MenuItem x:Name="MenuBubble" Header="Bubble Sort" Click="MenuBubble_Click"/>
                <MenuItem x:Name="MenuCocktail" Header="Cocktail Sort" Click="MenuCocktail_Click"/>
            </MenuItem>
        </Menu>

    </Grid>
</Window>
